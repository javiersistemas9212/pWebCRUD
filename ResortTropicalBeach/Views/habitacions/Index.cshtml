@model IEnumerable<ResortTropicalBeach.Models.habitacion>

@{
    ViewData["Title"] = "Index";
}

    <img class="center" src="~/images/logotb.png" alt="Alternate Text" />
<p style="margin-bottom:20 px;">
    <a class="btn btn-primary" asp-action="Create"> <i class="fas fa-plus-circle"></i> Crear Habitación</a>
</p>
<table class="table">
    <thead>
        <tr style="background-color:lightblue;color:black;">
            <th>
                @Html.DisplayNameFor(model => model.piso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nHabitacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.detalles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.disponible)
            </th>
            <th>CRUD</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.piso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nHabitacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detalles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.disponible)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
